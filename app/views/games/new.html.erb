<div class="letters-box text-center" data-controller="games">
  <div id="time">
  </div>
  <div class="letters" data-games-target="letters">
    <% (1..3).to_a.each do |i| %>
      <div class="row">
        <% (1..4).to_a.each do |j|%>
          <div class="col-sm">
            <button data-action="click->games#buttonEntry" class = "letter rounded <%=@colors[(i-1)*4 + (j-1)]%>"><%=@letters.pop%></button>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="container text-center justify-content-center">
    <form id = "form" action="/score" method = "POST" class = "m-3 justify-content-center" data-turbo="false">
      <input type="text" class="form-control mb-3 text-center" data-games-target="word" data-action="keydown->games#keyboardEntry" id="word" placeholder="Let's go!" value = "" name = "word" autofocus>
      <input type="text" id = "score" name = "score" value = "" data-games-target="score" hidden>
      <button type="submit" id = "btnsubmit" class="btn btn-primary" data-games-target="formbutton" disabled autofocus autocomplete="off">Lock it in!</button>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
